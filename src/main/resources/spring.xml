<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans.xsd 
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context.xsd">


	<bean name="computerDao" id="computerDao" class="com.excilys.persistence.ComputerDAO"
	autowire="default"/>

	<bean name="companyDao" id="companyDao" class="com.excilys.persistence.CompanyDAO"
	autowire="default"/>


	<bean name="companyS" class="com.excilys.service.CompanyS"
		autowire="default" />

	<bean name="computerS" class="com.excilys.service.ComputerS"
		autowire="default" />
		
	<!-- Enable Annotation based configuration -->
	<context:annotation-config />
	
</beans>